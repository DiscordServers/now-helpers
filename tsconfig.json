{
    "compileOnSave":   true,
    "compilerOptions": {
        "target":                       "es2017",
        "module":                       "commonjs",
        "lib":                          [
            "es2017"
        ],
        "outDir":                       "dist/",
        "declaration":                  true,
        "esModuleInterop":              true,
        "noUnusedLocals":               true,
        "noUnusedParameters":           true,
        "sourceMap":                    true,
        "allowSyntheticDefaultImports": true
    },
    "exclude":         [
        "node_modules"
    ]
}
