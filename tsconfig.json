{
    "compileOnSave":   true,
    "compilerOptions": {
        "target":                       "es2017",
        "module":                       "commonjs",
        "moduleResolution":             "node",
        "outDir":                       "dist/",
        "declaration":                  true,
        "esModuleInterop":              true,
        "noUnusedLocals":               true,
        "noUnusedParameters":           true,
        "sourceMap":                    false,
        "allowSyntheticDefaultImports": true,
        "lib":                          [
            "es2017"
        ]
    }
}
